rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Minimal rules for development/testing
    // Any authenticated user can read/write to all collections
    // 
    // IMPORTANT: For production, replace with stricter rules:
    // - Admins: full access
    // - Coders: read templates, read/write own responses only
    
    // Allow all authenticated users to read/write all documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
